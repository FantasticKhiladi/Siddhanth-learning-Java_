public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		int n = sc.nextInt();
		
		int i=1;
		while(i<=n)
		{ int spaces =1;
		while (spaces<n-i+1)
			{System.out.print('*');
				spaces++;}
		int j=1;
		while(j<=i)
		{System.out.print(j+i-1);
		j++;
		}
		
		int second=2*i-2;
		while(second>=i)
		{System.out.print(second);
		second--;
		}
		
		System.out.println();
		i++;
		}}
}
